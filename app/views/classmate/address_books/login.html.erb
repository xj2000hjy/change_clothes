<% content_for :style_link do%>
<style type="text/css">
#loginForm{
    position: absolute;
    left: 50%;
    top: 50%;
    font-size:1.2em;
    width: 280px;
    height: 120px;
    line-height: 26px;
    margin-top: -60px;
    margin-left: -140px;
    padding-top: 22px;
    text-align: center;
    border-radius: 5px;
    border:1px solid #ddd;
    box-shadow: 0  5px 5px #ccc;
}
#loginForm table td{
    padding: 2px;
}
.btn{
    cursor: pointer;
    font-size:1em;
}
#reg{
    position: absolute;
    right: 8px;
    bottom: 0;
}
</style>
<%end%>

<div id="loginForm">
    <%=form_tag  @user, url: {action: 'check_valid'}, authenticity_token: false do |f|%>
    <table width="100%" align="center">
      <tr>
        <td align="right"><%= f.label :username, '登录用户名:'%></td><td align="left"><%= f.text_field :username %></td>
      </tr>
      <tr>
        <td align="right"><%= f.label :password, '登录密码:'%></td><td align="left"><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td colspan="2"> <%= f.submit '重新输入', type: 'reset', class: 'btn'%> &nbsp; <%= f.submit '我要登录', type: 'submit', class:'btn' %> </td>
      </tr>
    </table>
    <%end%>
  <span id="reg"><%=link_to('我要注册...', new_address_book_path)%></span>
</div>